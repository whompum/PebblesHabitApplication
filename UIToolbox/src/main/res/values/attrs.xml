<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Color Pallet -->
    <attr name="mColorError" format="color"/>
    <attr name="mColorButton" format="color"/>
    <attr name="mColorFab" format="color"/>
    <attr name="mIconTint" format="color" />

    <!-- Dimensions - Padding -->
    <attr name="mSpaceXL" format="dimension" />
    <attr name="mSpaceL" format="dimension" />
    <attr name="mSpaceM" format="dimension" />
    <attr name="mSpace" format="dimension" />

    <!-- Dimensions - Text -->
    <attr name="mFontSizeL" format="dimension" />
    <attr name="mFontSizeM" format="dimension" />
    <attr name="mFontSize" format="dimension" />
    <attr name="mFontSizeS" format="dimension" />

    <!-- Dimensions - View-->
    <attr name="mTextBoxMinHieght" format="dimension"/>
    <attr name="mMinButtonHeight" format="dimension"/>
    <attr name="mCardElevation" format="dimension"/>
    <attr name="mCardCornerRadius" format="dimension"/>
    <attr name="mIconContentSize" format="dimension"/>
    <attr name="mMinTouchTarget" format="dimension"/>

    <!-- Custom states based on habit priorities-->
    <declare-styleable name="habit_priority_state">
        <attr name="state_priority_high_uncompleted" format="boolean"/>
        <attr name="state_priority_high_completed" format="boolean"/>
        <attr name="state_priority_normal_uncompleted" format="boolean"/>
        <attr name="state_priority_normal_complete" format="boolean"/>
    </declare-styleable>

</resources>